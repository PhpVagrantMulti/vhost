<VirtualHost *:80>
  ServerName <%=@server_name%> 
  DocumentRoot /var/www/html/<%=@document_root%>

  <% if node.recipe?('xhgui') %>
    #php_admin_value auto_prepend_file "/var/www/html/local.xhgui.com/external/header.php"
  <% end %>

  <Directory /var/www/html/<%=@document_root%>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All 
    Require all granted
  </Directory>

  # Possible values: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn
  ErrorLog /var/log/apache2/<%=@error_log_name%>
  CustomLog /var/log/apache2/<%=@custom_log_name%> combined
</VirtualHost>

<VirtualHost *:443>
  ServerName <%=@server_name%> 
  DocumentRoot /var/www/html/<%=@document_root%>

  <% if node.recipe?('xhgui') %>
    php_admin_value auto_prepend_file "/var/www/html/local.xhgui.com/external/header.php"
  <% end %>

  <Directory /var/www/html/<%=@document_root%>>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All 
    Require all granted
  </Directory>

  SSLEngine on
  SSLCertificateFile      /etc/ssl/certs/ssl-cert-snakeoil.pem
  SSLCertificateKeyFile /etc/ssl/private/ssl-cert-snakeoil.key

  # Possible values: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn
  ErrorLog /var/log/apache2/<%=@error_log_name%>
  CustomLog /var/log/apache2/<%=@custom_log_name%> combined
</VirtualHost>
